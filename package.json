{
    "name": "mcp-coderabbit-code-review",
    "version": "0.0.0",
    "description": "MCP server that automates CodeRabbit code review workflows with GitHub, enabling AI agents to handle PR comment triage and responses.",
    "type": "module",
    "module": "src/index.ts",
    "private": false,
    "license": "MIT",
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git@github.com:angelxmoreno/mcp-coderabbit-code-review.git"
    },
    "scripts": {
        "prepare": "lefthook install",
        "test": "bun test",
        "test:unit": "bun test tests/unit",
        "test:integration": "bun test tests/integration",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "lint:commits": "commitlint --from=origin/main --to=HEAD --verbose",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "pino": "^9.9.0",
        "pino-pretty": "^13.1.1",
        "zod": "^4.1.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@types/bun": "^1.2.20",
        "typescript": "^5.9.2",
        "lefthook": "^1.12.3"
    },
    "peerDependencies": {}
}
